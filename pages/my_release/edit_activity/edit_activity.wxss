
.act-cate {
  padding: 30rpx 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.act-cate view {
  width: 22%;
  box-sizing: border-box;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  text-align: center;
  border: 2rpx solid #f2f2f2;
}

.act-cate view.on {
  background: #da4e3f;
  color: #fff;
}

.weui-select {
  background-size: 36rpx 28rpx;
  background-position: right center;
  background-repeat: no-repeat;
}

.page__modules {
  padding: 20rpx 10rpx;
}

.weui-cells {
  margin: 0;
}

.activityName {
  text-align: center;
}

.activityType {
  color: #b0b0b0;
  border-left: 1px solid #ddd;
  padding-right: 20rpx;
}

.activityType .weui-select {
  font-size: 18px;
}

textarea {
  padding: 20rpx;
}

.uploadRuler {
  float: right;
  color: #da4e3f;
  font-size: 14px;
  margin-top: 20rpx;
  margin-right: 30rpx;
}

.selectTime picker {
  float: left;
  margin-right: 10rpx;
}

.weui-btn-area {
  margin-bottom: 50rpx;
}

.voice-btn{
  background: #da4e3f;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  text-align: center;
  color: #FFF;
}
.vobtn-img{
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}