/* pages/search/search.wxss */
/* pages/list/list.wxss */

.list {
  margin: 20rpx;
  padding: 20rpx;
}

.list-item {
  box-sizing: border-box;
  box-shadow: 2rpx 1rpx 10rpx 1rpx #ddd;
  margin-bottom: 30rpx;
  padding: 20rpx 28rpx;
  border-radius: 10rpx;
}

.portrait {
  overflow: hidden;
}
.portrait .exh_title{
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.portrait .list_Avatar {
  width: 40rpx;
  height: 40rpx;
  line-height: 50rpx;
  margin-right: 16rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  vertical-align: middle;
}

.user_date {
  font-size: 12px;
  float: right;
  color: #dc4e40;
}

.del-cont {
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.del-text {
  font-size: 14px;
  margin: 10rpx 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}

.del-cont image {
  width: 33%;
  height: 160rpx;
  border: 1px solid #f2f2f2;
  box-sizing: border-box;
}

.partic {
  overflow: hidden;
  padding: 10rpx 0;
  font-size: 24rpx;
}

.partic text {
  line-height: 60rpx;
  margin-right: 20rpx;
  color: gray;
}

.partic .ex_icon{
  width: 36rpx;
  line-height: 60rpx;
  margin-right: 2rpx;
  margin-top: -1rpx;
  vertical-align: middle;
  opacity: 0.8;
}
.partic .join {
  float: right;
  height: 60rpx;
  line-height: 60rpx;
  width: 120rpx;margin-left: 20rpx;
  background: #dc4e40;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
.exh_num{
  font-weight: normal;
  color: gray;
  font-size: 12px;
}
.weui-search-bar {
  background: none;
}

.weui-search-bar__form {
  border: 2rpx solid #f2f2f2;
  box-shadow: 2rpx 2rpx 5rpx 2rpx #f2f2f2;
}

.weui-search-bar__cancel-btn {
  background: #dc4e40;
  padding: 0 30rpx;
  height: 58rpx;
  line-height: 58rpx;
  margin-top: 4rpx;
  border-radius: 10rpx;
}

.list {
  margin-top: 0;
}

.list-item {
  position: relative;
}

.item-bar {
  width: 0;
  height: 0;
  border-width: 0 36px 36px;
  border-style: solid;
  border-color: transparent transparent #48b660; /*透明 透明  灰*/
  position: absolute;
  top: -20rpx;
  right: -54rpx;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg); /* IE 9 */
  -moz-transform: rotate(45deg); /* Firefox */
  -webkit-transform: rotate(45deg); /* Safari 和 Chrome */
  -o-transform: rotate(45deg);
}

.item-bar-inner {
  display: inline-block;
  width: 100rpx;
  text-align: center;
  color: #fff;
  margin-left: -45rpx;
  margin-top: 26rpx;
}
