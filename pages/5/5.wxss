.allshow{
  overflow: hidden;
}
.showdetail{
  float: left;width: 48%;overflow: hidden;margin-bottom: 10rpx;
}
.showdetail:nth-child(even){
  float: right;
}
.showdetail view{
  position: relative;font-size: 28rpx;
}
.showdetail view image{
  width: 100%;height: 240rpx;
}
.showdetail view text{
  position: absolute;left: 0;
  bottom: 0;z-index: 9;
}
.introduce{
  white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;
}





