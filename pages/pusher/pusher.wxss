.page-body-button {
  margin-bottom: 30rpx;
}

live-pusher {
  margin: 0 auto;
  width: 100%;
  height: 225px;
}
.operate {
  bottom: 100rpx;
  width: 100%;position: fixed;
  text-align: center;
}
.img-box {
  position: relative;
  display:inline-block;
  width:30px;
  height:50px;
  margin-left:calc(100% / 14 - 15px);
  margin-right:calc(100% / 14 - 15px);
  vertical-align: middle;
}

.img-view {
  position: relative;
  display: block;
  width:30px;
  height:30px;
}
.img-view:active{
  opacity: 0.55
}

.text-view {
  position: absolute;
  display: block;
  color: #ffffff;
  width: 100%;
  font-size:10px;bottom:0;
  text-align: center;
} 
