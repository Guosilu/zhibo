<view class="section tc">
 <view wx:if="{{watchPower === false}}">
  <video duration="{{duration}}" bindtimeupdate="payTip" id="myVideo" src="{{detail.video}}" danmu-list="{{danmuList}}" enable-danmu danmu-btn controls></video>
  </view>
  <view wx:else if = "{{watchPower === true}}">
  <video id="myVideo" src="{{detail.video}}" danmu-list="{{danmuList}}" enable-danmu danmu-btn controls></video>
  </view>
  <view class="btn-area" wx:if="{{detail.charge > 0}}">观看完整版需支付{{detail.charge}}元，您可以试看5秒</view>
  <view class="btn-area" wx:else>您可以免费观看本视频</view>
</view>
<!-- 评论 -->
<view class="tool">
  <view class='videotit'>{{detail.title}}</view> 
  <view class="tool-item">
    <image src=""></image>
    <text>{{detail.nickName ? detail.nickName : "管理员"}}</text>
  </view>
</view>
<view bindtap='wxPay'>pay</view>
<view class="comment_release">
  <view class="left">
    <textarea class="text" placeholder-class="weui-input" fixed="true" maxlength="-1" show-confirm-bar="false" cursor-spacing="15" auto-height="true" bindtap="bindReply" focus="{{releaseFocus}}" placeholder="写评论" />
    <view class="line" />
  </view>
  <!-- <button form-type="submit" class="submit">发送</button> -->
    <button bindtap="bindSendDanmu" class='submit'>发送弹幕</button>
</view>
