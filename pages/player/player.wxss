.page-body{
  display: block;width:100%;height:100%;overflow: hidden;
  /* position: relative; */
}
live-player {
  width: 100%;
  height: 225px;
}
.bottom_box
{
  position: relative;
  width: 30px; 
  height: 50px; 
  margin-left:calc(100% / 14 - 15px); 
  margin-right:calc(100% / 14 - 15px);
  display:inline-block;
}

.bottom_button
{
  display:inline-block;
  position: absolute;
  width: 30px; 
  height: 30px; 
}

.bottom_button :active
{
  opacity: 0.55
}

.bottom_text
{
  position: absolute;
  display:inline-block;
  color: #ffffff;
  width: 100%;
  font-size:10px;
  bottom: 0;
  text-align: center;
}

.comment-container{
  display: flex;bottom: 0;width: 100%;
  flex-direction:column;position: absolute;
}
.comment-container .row1{
  margin: 30rpx 15rpx;
  display: flex;
  align-items:center;
  height: 70rpx;
  box-sizing: border-box;
  border-top: 1px #e3e3e3 solid;
  border-bottom: 1px #e3e3e3 solid;
  border-left:1px #e3e3e3 solid;
  border-radius: 10rpx;
}

.comment-container .row1 input{
  flex: 1 1 auto;
  padding: 0 30rpx 0 10rpx;
  box-sizing: border-box;
  height: 70rpx;
  color: #999999 ;
  font-size: 34rpx;
}
.comment-container .btn-send{
  /* margin: 0 15rpx; */
  height: 70rpx;line-height: 70rpx;
  background-color: #0accac;
  color:#fff;
}
.comment-container .btn-send.button-hover{
  background-color: #0bc2a4;
}
.comment-container .btn-send::after{
  border: none;
}